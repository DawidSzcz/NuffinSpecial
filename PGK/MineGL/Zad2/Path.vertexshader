#version 330 core

layout (location = 2) in vec3 vertexPosition_modelspace;

out vec3 fragmentColor;
uniform mat4 transform;

void main(){
        gl_Position =  transform * vec4(vertexPosition_modelspace[1], vertexPosition_modelspace[0], vertexPosition_modelspace[2], 1);

        fragmentColor = vec3(vertexPosition_modelspace[2],1 - vertexPosition_modelspace[2],0);
}

